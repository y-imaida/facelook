<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <% if @topic.errors.any? %>
        <div class="flash-msg alert alert-warning" role="alert">
          <h2><%= @topic.errors.count %>件のエラーがあります。</h2>
          <ul>
            <% @topic.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="new-and-edit-form col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-body">
          <div>
            <%= form_for(@topic) do |f| %>
              <div class="content-field">
                <%= f.label '内容' %><br>
                <%= f.text_area :content, :rows => 10, :class => "form-control" %>
              </div>
              <%= f.label '写真', style: "margin: 15px auto 5px;" %>
              <%= image_tag(@topic.picture, :width => '100%') if @topic.picture? %>
              <%= f.file_field :picture %>
              <%= f.hidden_field :picture_cache %>
              <br>
              <%= f.submit :class => "btn btn-block btn-primary"%>
            <% end %>
          </div>
        </div>
      </div>
      <div>
        <%= link_to topics_path, class: "btn btn-block btn-default" do %>
          <%= fa_icon "arrow-circle-o-left fw", text: "戻る" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
