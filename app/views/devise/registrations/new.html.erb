<div class="registration-content">
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <% if devise_error_messages! != "" %>
          <div class="flash-msg alert alert-warning" role="alert">
            <%= devise_error_messages! %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default registration-form">
          <div class="panel-body">
            <h1>アカウント登録</h1>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <div class="field">
                <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
              </div>
              <div class="field">
                <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス" %>
              </div>
              <div class="field">
                <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
              </div>
              <div class="actions">
                <%= f.submit "アカウントを作成する", class: "btn btn-block btn-success" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
