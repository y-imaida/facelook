<div class="container">
  <div class="row">
    <div class="text-center">
      <h2>ユーザー一覧</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="user-list-panel panel panel-default">
        <div class="panel-body">
          <% @users.each do |user| %>
            <div class="user-list-item col-md-2 col-sm-3 col-xs-6">
              <%= link_to user_path(user.id) do %>
                <%= profile_img(user) %><br>
                <strong><%= user.name %></strong>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-default">
        <div class="panel-body">
          <%= link_to :back, class: "btn btn-block btn-default" do %>
            <%= fa_icon "arrow-circle-o-left fw", text: "戻る" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
